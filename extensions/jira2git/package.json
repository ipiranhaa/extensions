{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "jira2git",
  "title": "Jira2Git",
  "description": "Better development experience for developers.",
  "icon": "command-icon.png",
  "author": "ipiranhaa",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "transform",
      "title": "Transform Jira URL to Git branch name",
      "description": "Transform Jira card URL to Git branch name and copy to clipboard.",
      "mode": "view",
      "arguments": [
        {
          "name": "prefix",
          "placeholder": "Prefix",
          "type": "text",
          "required": false
        },
        {
          "name": "url",
          "placeholder": "Jira card URL",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
